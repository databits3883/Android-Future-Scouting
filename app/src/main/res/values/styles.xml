<resources>

  <!-- Base application theme. -->
  <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
    <!-- Customize your theme here. -->
    <item name="colorPrimary">@color/colorPrimary</item>
    <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
    <item name="colorAccent">@color/colorAccent</item>

    // Workaround android bug so at least the statusbar stays hidden when you click a spinner
    <item name="android:windowFullscreen">true</item>
  </style>

  <style name="Tablet_MeterNumberPickerStyle">
    <item name="mnp_min">0</item>
    <item name="mnp_max">9</item>
    <item name="mnp_textColor">@android:color/white</item>
    <item name="mnp_textSize">25sp</item>
    <item name="mnp_paddingHorizontal">15dp</item>
    <item name="mnp_paddingVertical">19dp</item>
    <item name="mv_enabled">true</item>
  </style>

  <style name="Phone_MeterNumberPickerStyle">
    <item name="mnp_min">0</item>
    <item name="mnp_max">9</item>
    <item name="mnp_textColor">@android:color/white</item>
    <item name="mnp_textSize">15sp</item>
    <item name="mnp_paddingHorizontal">5dp</item>
    <item name="mnp_paddingVertical">8dp</item>
    <item name="mv_enabled">true</item>
  </style>

  <style name="Tablet_team_MeterViewStyle">
    <item name="mv_firstColor">@android:color/black</item>
    <item name="mv_numberOfFirst">2</item>
    <item name="mv_numberOfSecond">2</item>
    <item name="mv_pickerStyle">@style/Tablet_MeterNumberPickerStyle</item>
    <item name="mv_secondColor">@color/green_900</item>
  </style>

  <style name="Phone_team_MeterViewStyle">
    <item name="mv_firstColor">@android:color/black</item>
    <item name="mv_numberOfFirst">2</item>
    <item name="mv_numberOfSecond">2</item>
    <item name="mv_pickerStyle">@style/Phone_MeterNumberPickerStyle</item>
    <item name="mv_secondColor">@color/green_900</item>
  </style>

  <style name="dividerBase">
    <item name="android:background">@android:color/darker_gray</item>
  </style>

  <style name="dividerHorizontal" parent="dividerBase">
    <item name="android:layout_width">match_parent</item>
    <item name="android:layout_height">3dp</item>

  </style>

  <style name="dividerVertical" parent="dividerBase">
    <item name="android:layout_width">3dp</item>
    <item name="android:layout_height">match_parent</item>
  </style>

</resources>
